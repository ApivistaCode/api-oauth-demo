{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "lib": ["es7"],
    "rootDir": "src"
  },
  "include": [
    "**/*.ts",
    "**/db.json"
  ],
  "exclude": ["node_modules", "dist"]
}
